<% content_for :level_one do %>
  <%= render "shared/level_one_nav" %>
<% end %>
<% content_for :level_two do %>
  <%= link_to @writing.title, writerview_writing_path(@writing) %>
<% end %>
<% content_for :level_three do %>
  <%= @chapter.title %>
<% end %>
<div id="<%= dom_id chapter %>" 
     class="container my-5" 
     style="max-width: 700px; line-height: 1.8; font-size: 1.1rem;">
  <!-- title -->
  <h1 class="mb-4 text-center"
      style="font-family: Georgia, serif;">
    <%= chapter.title %>
  </h1>
  <!-- description -->
  <% if chapter.description.present? %>
    <p class="text-muted fst-italic mb-4 text-center">
      <%= chapter.description %>
    </p>
  <% end %>
  <!-- content -->
  <div class="mt-4" 
       style="font-family: 'Times New Roman', serif; text-align: justify;">
    <%= simple_format chapter.content %>
  </div>
  <!-- bottom info -->
  <div class="mt-5 text-muted text-end"
       style="font-size: .9rem;">
    Written in: <%= chapter.writing.title if chapter.writing %>
  </div>
</div>
