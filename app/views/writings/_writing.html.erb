<div id="<%= dom_id writing %>" 
    class="col-8 d-flex flex-row justify-content-center card p-2 mb-3 shadow-sm mx-auto" >
  <div class="col-1">
    <% if writing.cover.attached? %>
      <%= image_tag writing.cover,
      class: "img-fluid mb-2 rounded",
      style: "max-height:50px; object-fit:cover;" %>
    <% end %>
  </div>
  <div class="col-8 p-1">
    <%= link_to preview_writing_path(writing), class: "text-decoration-none text-dark" do %>
      <p class="mb-0" style="cursor:pointer;"><%= writing.title %></p>
    <% end %>
    <%= writing.chapters.size %> ตอน
  </div>
  <div class="col-3">
    <button class="btn btn-secondary dropdown-toggle" type="button"
          id="actionsDropdown"
          data-bs-toggle="dropdown" aria-expanded="false">
      Actions
    </button>
    <ul class="dropdown-menu" aria-labelledby="actionsDropdown">
      <li><%= link_to "Edit", edit_writing_path(writing), class: "dropdown-item" %></li>
      <li><%= link_to "View", preview_writing_path(writing), class: "dropdown-item" %></li>
      <li><hr class="dropdown-divider"></li>
      <li>
        <%= link_to "Delete",
            writing_path(writing),
            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
            class: "dropdown-item text-danger" %>
      </li>
    </ul>
  </div>
</div>